{
  "name": "vite-typescript-ssr-react",
  "version": "1.0.1",
  "description": "Boilerplate for a modern web stack",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonluca/vite-typescript-ssr-react"
  },
  "author": "JonLuca DeCaro",
  "license": "MIT",
  "scripts": {
    "dev:server": "nodemon --watch server.ts --watch src/server --exec 'ts-node server.ts'",
    "dev:client": "yarn build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "serve": "yarn build && cross-env NODE_ENV=production yarn ts-node ./server",
    "serve:local": "vite serve",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist && copyfiles -f dist/client/assets/* dist/assets",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@glidejs/glide": "^3.5.2",
    "@headlessui/react": "^1.6.6",
    "@heroicons/react": "^1.0.6",
    "@mui/material": "^5.10.0",
    "@reduxjs/toolkit": "^1.8.3",
    "@supabase/supabase-js": "^1.35.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.4",
    "@testing-library/react": "^13.3.0",
    "autoprefixer": "^10.4.13",
    "axios": "^0.27.2",
    "browser-image-compression": "^2.0.0",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "dotenv-cra": "^3.0.2",
    "express": "4.18.2",
    "gapi-script": "^1.2.0",
    "html-react-parser": "^3.0.4",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.20",
    "pirsch-sdk": "^2.0.0",
    "plausible-tracker": "^0.3.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-google-drive-picker": "^1.2.0",
    "react-google-login": "^5.2.2",
    "react-helmet": "^6.1.0",
    "react-hook-reading-time": "^1.0.0",
    "react-image-file-resizer": "^0.4.8",
    "react-player": "^2.10.1",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.6.1",
    "react-scrollbar": "^0.5.6",
    "react-share": "^4.4.0",
    "react-use": "^17.4.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^6.0.0",
    "sass": "^1.53.0",
    "serve-static": "^1.15.0",
    "ts-node": "^10.9.1",
    "validator": "^13.7.0",
    "vite-tsconfig-paths": "^3.5.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.4.10",
    "@types/express": "^4.17.15",
    "@types/glidejs__glide": "^3.4.2",
    "@types/jest": "^28.1.6",
